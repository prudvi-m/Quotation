@model QuotationModel
@{
    ViewBag.Title = "Price Quotation";
}
<div class="container">
    <header class="jumbotron">
        <img id="logo" alt="Murach logo" src="~/images/QuatationImage.png"
             class="img-fluid" />
        @* <h1 class="mt-3">@ViewBag.Title</h1> *@
    </header>
    <main>
        
        <form asp-action="Index" method="post" class="form-horizontal">
            <div class="row">
                <label asp-for="SubTotal"
                       class="control-label col-3">
                    Subtotal:
                </label>
                <input asp-for="SubTotal"
                       class="form-control col-3" />
                <span asp-validation-for="@Model.SubTotal"
                      class="text-danger col"></span>
            </div>
            <div class="row">
                <label asp-for="Discount"
                       class="control-label col-3">
                    Discount Percent:
                </label>
                <input asp-for="Discount"
                       class="form-control col-3" />
                <span asp-validation-for="@Model.Discount"
                      class="text-danger col"></span>
            </div>
            <br/>
            <div class="row">
                <label class="control-label col-3">Discount Amount:</label>
                <input value="@ViewBag.DiscountAmount" readonly
                       class="form-control col-3" />
            </div>
            <div class="row">
                <label class="control-label col-3">Final Total:</label>
                <input value="@ViewBag.FinalTotal" readonly
                       class="form-control col-3" />
            </div>
            <br/>
            <br/>
            <div class="row">
                <div class="col offset-3 pl-0">
                    <button type="submit"
                            class="btn btn-primary">
                        Calculate
                    </button>
                    <a asp-action="Index"
                       class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </main>
</div>